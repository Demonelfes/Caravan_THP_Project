<div class="card">
  <div class="card-body">
    <% if van.photo.attached? %>
      <%= image_tag van.photo.variant(resize_to_limit: [100, 100]), class: "logo-image" %>
    <% else %>
      <p>=== Il n'y a pas encore de photo liée à ce van ===</p>
    <% end %>
    <h4 class="card-title"></h4>
    <p class="card-text"></p>
    <div class="btn_main">
      <%= link_to "En savoir plus", van_path(van.id), class: "btn btn-outline-primary", role: "button" %>
    </div>
  </div>
</div>
