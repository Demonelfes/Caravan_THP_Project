<div class="container">
  <section class="search-sec">
      <%= form_tag(dates_filter_vans_path, method: :get) do %>
        <div class="row d-flex justify-content-center text-white">
          <div class="col-lg-3 col-md-12 col-sm-12">
            <%= label_tag 'order_start_date', 'Début de disponiblité' %>
            <%= date_field_tag 'start_date', params[:start_date], class: 'form-control search-slt', placeholder: 'Début de disponiblité' %>
          </div>
          <div class="col-lg-3 col-md-12 col-sm-12">
            <%= label_tag 'order_end_date', 'Fin de disponibilité' %>
            <%= date_field_tag 'end_date', params[:end_date], class: 'form-control search-slt', placeholder: 'Fin de disponibilité' %>
          </div>
          <div class="col-lg-3 col-md-12 col-sm-12">
            <%= label_tag 'van_city', 'Ville' %>
            <%= text_field_tag 'van[city]', params.dig(:van, :city), class: 'form-control search-slt', placeholder: 'Paris, Vallon, Lyon...' %>
          </div>
          <div class="row-lg-3 row-md-12 row-sm-12 d-flex justify-content-center">
            <div class="mt-3">
              <%= submit_tag 'Search', class: 'btn btn-danger m-2' %>
              <%= link_to "Reinitialiser les filtres", full_index_vans_path, class:"btn btn-outline-danger ml-3" %>
            </div>
          </div>
      <% end %>
    </div>
  </section>
</div>
