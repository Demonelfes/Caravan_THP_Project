<div class="container mt-4">
  <section class="search-sec">
    <%= form_tag(dates_filter_vans_path, method: :get) do %>
      <div class="row d-flex justify-content-center text-white">
        <div class="col-lg-3 col-md-12 col-sm-12">
          <%= label_tag 'order_start_date', 'Date de départ' %>
          <%= date_field_tag 'start_date', params[:start_date], class: 'form-control search-slt'%>
        </div>
        <div class="col-lg-3 col-md-12 col-sm-12">
          <%= label_tag 'order_end_date', 'Date de retour' %>
          <%= date_field_tag 'end_date', params[:end_date], class: 'form-control search-slt'%>
        </div>
        <div class="col-lg-3 col-md-12 col-sm-12">
          <%= label_tag 'van_city', 'Ville (rayon : 10 km)' %>
          <%= text_field_tag 'van[city]', params.dig(:van, :city), class: 'form-control search-slt', placeholder: 'Paris, Vallon, Lyon...' %>
        </div>
        <div class="row-lg-3 row-md-12 row-sm-12 d-flex justify-content-center">
          <div class="mt-3">
            <%= submit_tag 'Rechercher', class: 'btn btn-danger m-2' %>
            <%= link_to "Réinitialiser les filtres", full_index_vans_path, class:"btn btn-outline-danger ml-3" %>
          </div>
        </div>
      </div>
    <% end %>
  </section>
</div>