<div class="container">
  <div class="row p-5 m-5">
    <% if @vans.count <= 6%>
      <% @vans.sort_by(&:updated_at).reverse.each do |van| %>
        <div class="col-md-4 mb-4">
        <%= render partial: 'vans/van_card', locals: { van: van}  %>
        </div>
      <%end%>
    <% else %>
      <% @visible_vans[0..5].sort_by(&:updated_at).reverse.each do |van| %>
        <div class="col-md-4 mb-4">
          <%= render partial: 'vans/van_card', locals: { van: van}  %>
        </div>
      <% end %>
        <div style="display: block; margin: 0 auto;">
          <%= link_to "Voir plus de vans", full_index_vans_path, class:"btn btn-success btn-lg" %>
        </div>
    <%end%>
    <%= javascript_include_tag 'index' %>
  </div>
