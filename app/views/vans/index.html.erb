<%= render partial: 'layouts/banner'%>
<div class="container">
  <div class="row p-5 m-5">
    <% if @vans.count <= 6%>
      <% @vans.sort_by(&:updated_at).reverse.each do |van| %>
        <div class="col-md-4 mb-4">
        <%= render partial: 'vans/van_card', locals: { van: van}  %>
        </div>
      <%end%>
    <% else %>
      <% @vans[0..5].sort_by(&:updated_at).reverse.each do |van| %>
        <div class="col-md-4 mb-4">
          <%= render partial: 'vans/van_card', locals: { van: van}  %>
        </div>
      <% end %>
    <% end %>
    <div style="display: block; margin: 0 auto;">
    <button type="button" class="btn btn-primary btn-lg">Voir plus de vans</button>
    </div>
  </div>
</div>
