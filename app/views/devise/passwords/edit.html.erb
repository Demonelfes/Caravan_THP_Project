<div class="container">
  <div class="row" style="padding-top:3%">
    <div class="col-4" style="display:flex; align-items:center">
      <h1>Modifier ton mot de passe</h1>
    </div>

    <div class="col-8">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, class:" form-label mt-4", "Nouveau mot de passe" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class:" form-label mt-4", "Confirmation nouveau mot de passe" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Changer mon mot de passe", class:"btn btn-secondary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
